<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:layout_behavior="com.zxj.wukong.ui.utils.HomeHeaderBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/search_toolbar"
        layout="@layout/search_toolbar_layout"/>
    <ImageView
        android:id="@+id/header_iv"
        android:src="@mipmap/icon_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_toolbar"
        android:layout_width="56dp"
        android:layout_height="56dp"/>
    <TextView
        android:maxLines="1"
        tools:text= "user"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_iv"
        android:id="@+id/user_tv"
        style="@style/TextNormalStyle" />

    <TextView
        tools:text= "desc"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_tv"
        style="@style/TextNormalStyle" />
</androidx.constraintlayout.widget.ConstraintLayout>